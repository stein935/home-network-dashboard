{
  "name": "home-network-dashboard",
  "version": "1.0.0",
  "description": "A brutalist home network dashboard with Google OAuth",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "deploy": "./scripts/deploy.sh",
    "backup:dev": "node packages/server/scripts/checkpoint-db.js",
    "dev": "npm run dev:server & npm run dev:client",
    "dev:server": "npm run dev --workspace=home-dashboard-server",
    "dev:client": "npm run dev --workspace=home-dashboard-client",
    "start": "npm run start --workspace=home-dashboard-server",
    "seed": "npm run seed --workspace=home-dashboard-server",
    "recover": "node packages/server/scripts/recover-data.js",
    "build": "npm run build --workspace=home-dashboard-client",
    "preview": "npm run preview --workspace=home-dashboard-client",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "dashboard",
    "home-network",
    "oauth",
    "brutalist"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@eslint/json": "^0.14.0",
    "@eslint/markdown": "^7.5.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.5.0",
    "prettier": "^3.6.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
