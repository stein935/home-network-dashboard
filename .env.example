NODE_ENV=production
PORT=3030
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
# For development: http://localhost:3030/auth/google/callback
# For production with Cloudflare Tunnel: https://yourdomain.com/auth/google/callback
GOOGLE_CALLBACK_URL=http://localhost:3030/auth/google/callback
SESSION_SECRET=your_random_secret_key_change_this_in_production
DATABASE_PATH=/data/database.db

# Cloudflare Tunnel Token (Required for production HTTPS deployment)
# Get this from: Cloudflare Dashboard → Zero Trust → Networks → Tunnels → Your Tunnel → Configure
CLOUDFLARE_TUNNEL_TOKEN=your_cloudflare_tunnel_token_here
